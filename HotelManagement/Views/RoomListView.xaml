<UserControl x:Class="HotelManagement.Views.RoomListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotelManagement.Views"
             xmlns:controls="clr-namespace:HotelManagement.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             DataContext="{Binding RoomListViewModel, Source={StaticResource Locator}}">
    <Grid>
        <controls:ItemListControl Items="{Binding Items}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                  AddCommand="{Binding AddCommand}" />

        <!--<DataGrid ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}" />-->
    </Grid>
</UserControl>
